        <div style="margin-top:1em;width:80%;min-height:500px">

            <p-tabView>
                <p-tabPanel header="大師自序">
                    <div class="form-group" style="margin-top:1em">
                        <label for="cpintro_preface">大師自序</label>
                        <ng2-summernote1 id="cpintro_preface" [(ngModel)]="cpintro_preface" lang="zh-TW" serverImgUp hostUpload="{{hostUpload}}" uploadFolder="{{uploadFolder}}" [width]="300" [height]="350" #name="ngModel"></ng2-summernote1>
