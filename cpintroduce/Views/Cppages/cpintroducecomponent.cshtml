                    </div>

                </p-tabPanel>
                <p-tabPanel header="星雲之道">

                    <div class="form-group" style="margin-top:1em">
                        <label s for="cpintro_masterroad">星雲之道</label>
                        <ng2-summernote1 id="cpintro_masterroad" [(ngModel)]="cpintro_masterroad" lang="zh-TW" serverImgUp hostUpload="{{hostUpload}}" uploadFolder="{{uploadFolder}}" [width]="300" [height]="350" #name="ngModel"></ng2-summernote1>
