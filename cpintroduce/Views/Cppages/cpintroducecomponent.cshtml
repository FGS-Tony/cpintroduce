                    </div>
                </p-tabPanel>
                <p-tabPanel header="全集介紹">
                    <div class="form-group" style="margin-top:1em">
                        <label for="cpintro_intro">全集介紹</label>
                        <ng2-summernote1 id="cpintro_intro" [(ngModel)]="cpintro_intro" lang="zh-TW" serverImgUp hostUpload="{{hostUpload}}" uploadFolder="{{uploadFolder}}" [width]="300" [height]="350" #name="ngModel"></ng2-summernote1>
                        @*  <textarea class="form-control" id="cpintro_intro" rows="6" placeholder="請輸入全集介紹" formControlName="cpintro_intro">  </textarea>*@
                    </div>
                </p-tabPanel>
                <p-tabPanel header="星雲大師略傳">

                    <div class="form-group" style="margin-top:1em">
                        <label s for="cpintro_master">星雲大師略傳</label>
                        <ng2-summernote1 id="cpintro_master" [(ngModel)]="cpintro_master" lang="zh-TW" serverImgUp hostUpload="{{hostUpload}}" uploadFolder="{{uploadFolder}}" [width]="300" [height]="350" #name="ngModel"></ng2-summernote1>
