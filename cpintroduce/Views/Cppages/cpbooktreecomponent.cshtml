
<kendo-grid [data]="view | async"
            [height]="500"
            [resizable]="true"
            [pageSize]="gridState.take" [skip]="gridState.skip" [sort]="gridState.sort"
            [pageable]="true" [sortable]="true"
            (dataStateChange)="onStateChange($event)"
            (edit)="editHandler($event)" (cancel)="cancelHandler($event)"
            (save)="saveHandler($event)" (remove)="removeHandler($event)"
            (add)="addHandler($event)">
   
    <kendo-grid-column field="cpbclass_no" title="大類名稱" [width]="150">
        <ng-template kendoGridCellTemplate let-dataItem>
            {{getcpbclassname(cpbclassno)?.cpbclass_name}}
        </ng-template>
        <ng-template kendoGridEditTemplate let-dataItem="dataItem">
            <strong>{{getcpbclassname(cpbclassno)?.cpbclass_name}}</strong>
        </ng-template>
       
    </kendo-grid-column>
    <kendo-grid-column field="cpbook_name" title="書籍名稱"></kendo-grid-column>
    <kendo-grid-column field="cpbook_isdisplay" editor="boolean" title="是否顯示" [width]="100">
        <ng-template kendoGridCellTemplate let-dataItem let-rowIndex="rowIndex" >
            {{dataItem.cpbook_isdisplay ? "顯示" : "不顯示"}}
        </ng-template>
    </kendo-grid-column>
    <kendo-grid-column field="cpbook_sort" title="資料排序" [width]="90"></kendo-grid-column>
 
    <kendo-grid-messages noRecords="無資料顯示">
    </kendo-grid-messages>
</kendo-grid>
